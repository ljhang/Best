.list-container {
  padding: 0px;
}

.category-list {
  width: 100%;
}

.category-item {
  width: 100%;
  height: 320px;
  box-sizing: border-box;
  padding: 10px 10px 10px 10px;
  background-color: #eaeaea;
}

.cover-container {
  width: 100%;
  height: 100%;
}

.cover-Image {
  border-radius: 5px;
  width: 100%;
  height: 100%;
}


.expose_container {  
  background-color: #eaeaea;
}

.tool_view {
  margin-left: 10px;
  margin-right: 10px;
  flex: 0 0 30px;
  background: #eaeaea;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 14px;
  color: #666;
}

.tool_button {
  width: 33%;
  height: 100%;
  line-height: 30px;
  text-align: center;
}

.text_view {
  padding: 0 10px 10px 10px;
}

.expose_text {  
  color: #666;
  font-size: 12px;
  display: block;
}